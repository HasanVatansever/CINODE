<!DOCTYPE html>
<html>
<head lang="en">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.4/angular.min.js"></script>
    <link href="//netdna.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <script src="~/Scripts/Home/SkillAngular.js"></script>
</head>
<body ng-app="skillApp">
    <div class="container" style="padding-left:200px; padding-top:30px; padding-right:200px;" ng-controller="skillCtrl">
        <h4><b>SKILLS</b></h4><br>

        <form class="form-horizontal" ng-submit="AddSkill()">
            <div class="form-group ">

                <div class="col-md-3">
                    <input type="text" class="form-control " ng-model="name" placeholder="Add Skill..." required>
                </div>

                <div class="btn-group col-md-8">
                    <label class="col-sm-1 "><input type="radio" ng-model="rate" value="0" />0</label>
                    <label class="col-sm-1 "><input type="radio" ng-model="rate" value="1" />1</label>
                    <label class="col-sm-1 "><input type="radio" ng-model="rate" value="2" />2</label>
                    <label class="col-sm-1 "><input type="radio" ng-model="rate" value="3" />3</label>
                    <label class="col-sm-1 "><input type="radio" ng-model="rate" value="4" />4</label>
                    <label class="col-sm-1 "><input type="radio" ng-model="rate" value="5" />5</label>
                </div>

                <div class="col-md-1">
                    <input type="submit" value="Submit" class="btn btn-success">
                </div>
            </div>

            <span></span>

            <div class="form-group" style="padding-left:10px; padding-top:10px;" ng-init="loadEvents()">
                <table class="table table-striped table-condensed">
                    @*<tr>
                            <th>name</th>
                            <th>rate</th>
                        </tr>*@
                    <tr ng-repeat="skill in skills">
                        <td class="col-md-3">
                            <h4><b>{{skill.name}}</b></h4>
                        </td>
                        <td class="col-md-6">
                            <div class="btn-group">
                                <label class="col-sm-1 table-bordered"><input type="radio" class="btn-default" ng-model="skill.rate" ng-click="ChangeRate(skill)" value="0" />0</label>
                                <label class="col-sm-1 table-bordered"><input type="radio" class="btn-default" ng-model="skill.rate" ng-click="ChangeRate(skill)" value="1" />1</label>
                                <label class="col-sm-1 table-bordered"><input type="radio" class="btn-default" ng-model="skill.rate" ng-click="ChangeRate(skill)" value="2" />2</label>
                                <label class="col-sm-1 table-bordered"><input type="radio" class="btn-default" ng-model="skill.rate" ng-click="ChangeRate(skill)" value="3" />3</label>
                                <label class="col-sm-1 table-bordered"><input type="radio" class="btn-default" ng-model="skill.rate" ng-click="ChangeRate(skill)" value="4" />4</label>
                                <label class="col-sm-1 table-bordered"><input type="radio" class="btn-default" ng-model="skill.rate" ng-click="ChangeRate(skill)" value="5" />5</label>
                            </div>
                        </td>
                        <td class="col-lg-1">
                            <input type="button" class="btn btn-default btn-group-lg" width="15" value="x" ng-click="RemoveSkill(skill.id)">
                        </td>
                    </tr>
                </table>
            </div>

        </form>
    </div>
</body>
</html>

